mixin toast(type, message, id)
     div(id=id, class='hidden fixed bottom-3 right-5 z-100 flex items-center gap-2 w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 bg-red-50')
          div(class="inline-flex items-center justify-center flex-shrink-0 w-8 h-8 text-red-500 bg-red-100 rounded-lg")
               if (type == 'danger')
                    img(src='toast_danger.svg')
               else if (type == 'success')
                    img(src='toast_success.svg')
               else if (type == 'warning')
                    img(src='toast_warning.svg')
          div(id='toast-content', class="ms-3 text-sm text-red-900 font-bold")
          button(class="bg-transparent ms-auto -mx-1.5 -my-1.5 text-slate-600 hover:text-slate-900 rounded-lg p-1.5 inline-flex items-center justify-center h-8 w-8")
               img(src='close.svg')