include mixin/announcement.pug
include mixin/toast.pug

doctype html
html
     head
     meta(charset="utf-8")
     meta(http-equiv="X-UA-Compatible", content="IE=edge")
     meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
     title BookWorm Admin
     script(src="https://cdn.tailwindcss.com")
     script(src="https://cdn.jsdelivr.net/npm/umbrellajs")
     script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")
     link(href="style.css", rel="stylesheet")
     body(class='overflow-y-hidden text-slate-900 text-base')
          div(class='flex h-screen')
               aside(class='flex flex-col bg-slate-900 p-4 gap-1')
                    div(class='flex gap-4 text-gray-50 p-4 items-center')
                         img(src='logo.png', class='w-8')
                         p(class='font-bold') BookWorm Admin
                    div(class='p-2')
                    div(class='flex gap-4 text-gray-50 hover:bg-slate-700 p-4 rounded-lg cursor-pointer items-center')
                         img(src='sidebar_book.svg', class='w-8')
                         p(class='') Book
                    div(id='sidebar-category', class='flex gap-4 text-gray-50 hover:bg-slate-700 p-4 rounded-lg cursor-pointer items-center')
                         img(src='sidebar_category.svg', class='w-8')
                         p(class='') Category
                    div(class='flex gap-4 text-gray-50 hover:bg-slate-700 p-4 rounded-lg cursor-pointer items-center')
                         img(src='sidebar_batch.svg', class='w-8')
                         p(class='') Batch
                    div(class='flex gap-4 text-gray-50 hover:bg-slate-700 p-4 rounded-lg cursor-pointer items-center')
                         img(src='sidebar_promotion_list.svg', class='w-8')
                         p(class='') Promotion List
                    div(class='flex gap-4 text-gray-50 hover:bg-slate-700 p-4 rounded-lg cursor-pointer items-center')
                         img(src='sidebar_order.svg', class='w-8')
                         p(class='') Order
                    div(class='flex gap-4 text-gray-50 hover:bg-slate-700 p-4 rounded-lg cursor-pointer items-center')
                         img(src='sidebar_customer.svg', class='w-8')
                         p(class='') Customer
                    div(class='flex gap-4 text-gray-50 hover:bg-slate-700 p-4 rounded-lg cursor-pointer items-center')
                         img(src='sidebar_about.svg', class='w-8')
                         p(class='') About
                    div(class="grow")
                    div(class='flex gap-4 text-gray-50 p-4 items-center')
                         img(src='sidebar_avatar_placeholder.svg', class='w-8')
                         p(class='font-bold') Huy Le Nguyen Truong
               div(class="pt-6 pl-6 pr-6 grow bg-slate-50 overflow-y-auto")
                    block content