div(id="deactivate-collection-modal", class="hidden fixed z-40 w-screen h-screen inset-0 bg-gray-900 bg-opacity-60")
     div(class="fixed z-50 top-1/2 left-1/2 -translate-x-1/2 -translate-y-3/4 w-96 bg-white rounded-md px-8 py-6 space-y-5 drop-shadow-lg")
          div(class="flex justify-between")
               p(class="text-xl font-semibold") Delete collection?
               i(class="material-icons w-8 cursor-pointer", onclick="closeDeleteModal()") close
          p All the associated books will be disassociate from this collection. This action cannot be undone!
          div(class="flex justify-end")
               +primary_button("Confirm", "submitDeleteCategory()", "red")

     script(type="text/javascript").
          var collectionId 
          const openDeleteModal = (id) => {
               collectionId = id
               u("#deactivate-collection-modal").removeClass('hidden')   
          }

          const closeDeleteModal = () => {
               u("#deactivate-collection-modal").addClass('hidden');   
          }

          const submitDeleteCategory = async () => {
               axios.deactivate(`/collection/${collectionId}`)
               .then(() => location.href='/collection')
               .catch(console.log);
          }