div.bg-white.p-8.shadow-lg.shadow-slate-200.rounded-2xl
     form.grid.gap-4.mb-2.grid-cols-2
          div(class="col-span-2")
               label.block.mb-2.text-sm.font-medium.text-slate-900(
                    for="minQuantity", 
               ) Min quantity 
               input(
                    type="number", 
                    name="minQuantity", 
                    id="minQuantity", 
                    class="bg-slate-50 border border-slate-300 text-slate-900 text-sm rounded-lg focus:bg-transparent focus:border-primary-600 block w-1/2 p-2.5", 
                    placeholder="Type discount min quantity", 
                    required
               )
          div(class="col-span-2")
               label.block.mb-2.text-sm.font-medium.text-slate-900(
                    for="maxQuantity", 
               ) Max quantity 
               input(
                    type="number", 
                    name="maxQuantity", 
                    id="maxQuantity", 
                    class="bg-slate-50 border border-slate-300 text-slate-900 text-sm rounded-lg focus:bg-transparent focus:border-primary-600 block w-1/2 p-2.5", 
                    placeholder="Type discount max quantity", 
               )
          div(class="col-span-2")
               label.block.mb-2.text-sm.font-medium.text-slate-900(
                    for="percentage", 
               ) Percentage
               input(
                    type="number", 
                    name="percentage", 
                    id="percentage", 
                    class="bg-slate-50 border border-slate-300 text-slate-900 text-sm rounded-lg focus:bg-transparent focus:border-primary-600 block w-full p-2.5", 
                    placeholder="Type discount percentage", 
                    required
               )
          div(class="col-span-2")
               label.block.mb-2.text-sm.font-medium.text-slate-900(
                    for="startAt", 
               ) Start date
               input(
                    type="datetime-local", 
                    name="startAt", 
                    id="startAt", 
                    class="bg-slate-50 border border-slate-300 text-slate-900 text-sm rounded-lg focus:bg-transparent focus:border-primary-600 block w-full p-2.5", 
                    placeholder="Type or pick discount start date", 
               )
          div(class="col-span-2")
               label.block.mb-2.text-sm.font-medium.text-slate-900(
                    for="endAt", 
               ) End date
               input(
                    type="datetime-local", 
                    name="endAt", 
                    id="endAt", 
                    class="bg-slate-50 border border-slate-300 text-slate-900 text-sm rounded-lg focus:bg-transparent focus:border-primary-600 block w-full p-2.5", 
                    placeholder="Type or pick discount end date", 
               )