div#delete-discount-modal(class="hidden fixed z-40 w-screen h-screen inset-0 bg-gray-900 bg-opacity-60")
     div(class="fixed z-50 top-1/2 left-1/2 -translate-x-1/2 -translate-y-3/4 w-96 bg-white rounded-md px-8 py-6 space-y-5 drop-shadow-lg")
          div.flex.justify-between
               p.text-xl.font-semibold Delete discount?
               i.material-icons.w-8.cursor-pointer(onclick="closeDeleteModal()") close
          p This discount will be deactivated!
          div.flex.justify-end
               +primary_button("Confirm", "submitDeleteDiscount()", "red")

     script(type="text/javascript").
          var discountId 
          const openDeleteModal = (id) => {
               discountId = id
               u("#delete-discount-modal").removeClass('hidden')   
          }

          const closeDeleteModal = () => {
               u("#delete-discount-modal").addClass('hidden');   
          }

          const submitDeleteDiscount = async () => {
               axios.delete(`/discount/${discountId}`)
               .then(() => location.href='/discount')
               .catch(console.log);
          }