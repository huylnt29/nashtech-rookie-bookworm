div(id="delete-publisher-modal", class="hidden fixed z-40 w-screen h-screen inset-0 bg-gray-900 bg-opacity-60")
     div(class="fixed z-50 top-1/2 left-1/2 -translate-x-1/2 -translate-y-3/4 w-96 bg-white rounded-md px-8 py-6 space-y-5 drop-shadow-lg")
          div(class="flex justify-between")
               p(class="text-xl font-semibold") Delete publisher?
               i(class="material-icons w-8 cursor-pointer", onclick="closeDeleteModal()") close
          p All the associated books will be disassociate from this publisher. This action cannot be undone!
          div(class="flex justify-end")
               +primary_button("Confirm", "submitDeleteAuthor()", "red")

     script(type="text/javascript").
          var publisherId 
          const openDeleteModal = (id) => {
               publisherId = id
               u("#delete-publisher-modal").removeClass('hidden')   
          }

          const closeDeleteModal = () => {
               u("#delete-publisher-modal").addClass('hidden');   
          }

          const submitDeleteAuthor = async () => {
               axios.delete(`/publisher/${publisherId}`)
               .then(() => location.href='/publisher')
               .catch(console.log);
          }