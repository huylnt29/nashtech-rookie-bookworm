extends ../global_layout.pug

block content   
     script(type='text/javascript').
          u("#sidebar-customer").addClass("bg-slate-700")
          const navigateToDetailPage = (id) => {
               location.href = `/customer/${id}`
          }
     div
          p.font-bold.text-xl.text-slate-900 CUSTOMER

          div.h-4
          div.bg-white.p-8.shadow-lg.shadow-slate-200.rounded-2xl
               if customers.length > 0
                    table.table.w-full
                         thead.table-header-group.bg-slate-100
                              tr.table-row
                                   th.table-cell.text-left.p-3 ID
                                   th.table-cell.text-left NAME
                                   th.table-cell.text-left PHONE
                                   th.table-cell.text-left ORDERS COUNT  
                                   th.table-cell.text-left REACHED AT   
                         tbody.table-row-group
                              each customer in customers
                                   tr(class="table-row hover:bg-slate-50 hover:cursor-pointer group")
                                        td.table-cell.p-3(onclick=`navigateToDetailPage(${customer.id})`) #{customer.id}
                                        td.table-cel(onclick=`navigateToDetailPage(${customer.id})`) #{customer.name}
                                        td.table-cel(onclick=`navigateToDetailPage(${customer.id})`) #{customer.phone}
                                        td.table-cel(onclick=`navigateToDetailPage(${customer.id})`) #{customer._count.orders}
                                        td.table-cel(onclick=`navigateToDetailPage(${customer.id})`) #{customer.createdAt.toLocaleString()}
               else 
                    +announcement(
                         'illustration_no_data.svg', 
                         'There has not been any customer'
                    )