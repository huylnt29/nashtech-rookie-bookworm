div#delete-batch-modal(class="hidden fixed z-40 w-screen h-screen inset-0 bg-gray-900 bg-opacity-60")
     div(class="fixed z-50 top-1/2 left-1/2 -translate-x-1/2 -translate-y-3/4 w-96 bg-white rounded-md px-8 py-6 space-y-5 drop-shadow-lg")
          div.flex.justify-between
               p.text-xl.font-semibold Delete batch?
               i.material-icons.w-8.cursor-pointer(onclick="closeDeleteModal()") close
          p This batch will be deactivated!
          div.flex.justify-end
               +primary_button("Confirm", "submitDeleteBatch()", "red")

     script(type="text/javascript").
          var batchId 
          const openDeleteModal = (id) => {
               batchId = id
               u("#delete-batch-modal").removeClass('hidden')   
          }

          const closeDeleteModal = () => {
               u("#delete-batch-modal").addClass('hidden');   
          }

          const submitDeletebatch = async () => {
               axios.delete(`/batch/${batchId}`)
               .then(() => location.href='/batch')
               .catch(console.log);
          }