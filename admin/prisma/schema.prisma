generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id            Int       @id @default(autoincrement())
  imageUrls     String[]
  name          String
  description   String?
  publishedYear Int
  publisherId   Int
  categoryId    Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  authors       Author[]
  reviews       Review[]
  batchs        Batch[]
  publisher     Publisher @relation(fields: [publisherId], references: [id])
  category      Category  @relation(fields: [categoryId], references: [id])
}

model Publisher {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  books     Book[]
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

model Review {
  id        Int      @id @default(autoincrement())
  author    String
  content   String?
  rating    Int
  bookId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  book      Book     @relation(fields: [bookId], references: [id])
}

model Batch {
  id              Int             @id @default(autoincrement())
  initialQuantity Int
  soldQuantity    Int             @default(0)
  originalPrice   Float
  bookId          Int
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  book            Book            @relation(fields: [bookId], references: [id])
  promotionLists  PromotionList[]
  Price           Price[]
}

model PromotionList {
  id        Int      @id @default(autoincrement())
  name      String
  batchId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  batch     Batch    @relation(fields: [batchId], references: [id])
}

model Price {
  id                 Int         @id @default(autoincrement())
  value              Float
  discountPercentage Float
  state              PriceState
  batchId            Int
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  batch              Batch       @relation(fields: [batchId], references: [id])
  OrderLine          OrderLine[]
}

enum PriceState {
  ACTIVE
  INACTIVE
}

model OrderLine {
  id        Int      @id @default(autoincrement())
  quantity  Int
  priceId   Int
  orderId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  price     Price    @relation(fields: [priceId], references: [id])
  order     Order    @relation(fields: [orderId], references: [id])
}

model Order {
  id         Int         @id @default(autoincrement())
  customerId Int
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  state      OrderState
  customer   Customer    @relation(fields: [customerId], references: [id])
  OrderLine  OrderLine[]
}

model Customer {
  id       Int     @id @default(autoincrement())
  name     String
  phone    String
  address  String
  city     String
  district String
  Order    Order[]
}

enum OrderState {
  PLACED
  PROCESSED
  COMPLETED
  CANCELLED
}
